<h1>Productos</h1>
<h3><a href="/productos/create">Crear Producto</a></h3>
<h1>Lista de Productos</h1>
{{#if productos }}
<table class="table table-hover">
<thead>
<tr>
<th>Nombre</th>
<th>Descripción</th>
<th>Precio</th>
<th>Stock</th>
<th>Categoría</th>
</tr>
</thead>
<tbody>
{{# each productos }}
<tr>
<td><a href="/productos/show/{{ _id }}">{{ nombre }}</a></td>
<td>{{ descripcion }}</td>
<td>{{ precio }}</td>
<td>{{ stock }}</td>
<td>{{ categoria }}</td>
</tr>
{{/each}}
</tbody>
</table>
{{else}}
<div>Productos no encontrados.</div>
{{/if}}