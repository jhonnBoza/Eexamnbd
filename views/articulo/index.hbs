<h1>{{title}}</h1>
<h1>Artículos</h1>
<p>
<div class="container">
<h3><a href="/articulos/create">Crear Artículo</a></h3>
<h1>Lista de Artículos</h1>
{{#if error}}
<div style="color: red;">{{error}}</div>
{{/if}}
{{#if articulos }}
<table class="table table-hover">
<thead>
<tr>
<th>Descripción</th>
<th>Precio Soles</th>
<th>Cantidad</th>
<th>Stock</th>
<th>Precio Dólares</th>
<th>Marca</th>
<th>Modelo</th>
<th>Acciones</th>
</tr>
</thead>
<tbody>
{{# each articulos }}
<tr>
<td><a href="/articulos/{{ _id }}">{{ descripcion }}</a></td>
<td>S/ {{ precio_soles }}</td>
<td>{{ cantidad }}</td>
<td>{{ stock }}</td>
<td>$ {{ precio_dolares }}</td>
<td>{{ Marca }}</td>
<td>{{ Modelo }}</td>
<td>
<a href="/articulos/{{ _id }}">Ver</a> | 
<a href="/articulos/{{ _id }}/edit">Editar</a> | 
<form action="/articulos/{{ _id }}/delete" method="POST" style="display: inline;">
<input type="submit" value="Eliminar" onclick="return confirm('¿Estás seguro?')" />
</form>
</td>
</tr>
{{/each}}
</tbody>
</table>
{{~^~}}
<div>Artículos no encontrados.</div>
{{/if}}
</div>
</p>
